<Window
    Background="Black"
    Height="500"
    ResizeMode="NoResize"
    Title="File Filtering Options"
    Width="400"
    x:Class="NanoSearch.FilterOptionsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:io="clr-namespace:System.IO;assembly=System.Runtime"
    xmlns:nanoSearch="clr-namespace:NanoSearch"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <nanoSearch:EnumFlagMultiConverter x:Key="EnumFlagMultiConverter" />

        <!--  All FileAttributes values for flags  -->
        <ObjectDataProvider
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}"
            x:Key="FileAttributesValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="io:FileAttributes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock FontWeight="Bold" Text="Regex Name Pattern:" />
            <TextBox Margin="0,4,0,0" Text="{Binding RegexNamePattern, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <TabControl Grid.Row="1">
            <!--  1) Attributes To Skip  -->
            <TabItem Header="Attributes">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding Source={StaticResource FileAttributesValues}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding}">
                                    <CheckBox.IsChecked>
                                        <MultiBinding Converter="{StaticResource EnumFlagMultiConverter}" Mode="OneWay">
                                            <Binding Path="DataContext.AttributesToSkip" RelativeSource="{RelativeSource AncestorType=Window}" />
                                            <Binding />
                                        </MultiBinding>
                                    </CheckBox.IsChecked>
                                </CheckBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <!--  2) Excluded Leading Chars  -->
            <TabItem Header="Leading Chars">
                <StackPanel>
                    <ListBox
                        Height="100"
                        ItemsSource="{Binding ExcludeBeginningWith}"
                        x:Name="ExcludedCharsList" />
                    <WrapPanel Margin="0,4">
                        <TextBox
                            MaxLength="1"
                            Width="30"
                            x:Name="NewCharBox" />
                        <Button
                            Click="OnAddExcludeChar"
                            Content="Add"
                            Margin="4,0" />
                        <Button
                            Click="OnRemoveExcludeChar"
                            Content="Remove"
                            Margin="4,0" />
                    </WrapPanel>
                </StackPanel>
            </TabItem>

            <!--  3) Included Extensions  -->
            <TabItem Header="Extensions">
                <StackPanel>
                    <ListBox
                        Height="100"
                        ItemsSource="{Binding IncludedFileExtensions}"
                        x:Name="ExtensionsList" />
                    <WrapPanel Margin="0,4">
                        <TextBox Width="100" x:Name="NewExtBox" />
                        <Button
                            Click="OnAddExtension"
                            Content="Add"
                            Margin="4,0" />
                        <Button
                            Click="OnRemoveExtension"
                            Content="Remove"
                            Margin="4,0" />
                    </WrapPanel>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!--  OK / Cancel  -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Margin="0,8,0,0"
            Orientation="Horizontal">
            <Button
                Click="OnOk"
                Content="OK"
                Margin="4,0"
                Width="75" />
            <Button
                Click="OnCancel"
                Content="Cancel"
                Margin="4,0"
                Width="75" />
        </StackPanel>
    </Grid>
</Window>
