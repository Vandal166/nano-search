<!--  SettingsWindow.xaml  -->
<Window
    AllowsTransparency="True"
    Background="Transparent"
    Height="400"
    Padding="0"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Title="nano-search"
    Topmost="True"
    Width="236"
    WindowStyle="None"
    x:Class="NanoSearch.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                RecognizesAccessKey="True"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#222" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Padding" Value="8,4" />
        </Style>
    </Window.Resources>

    <!--  Entire window is one flat panel  -->
    <Border
        Background="#DD1E1E1E"
        CornerRadius="0"
        Padding="0">

        <StackPanel>

            <!--  Header  -->
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="White"
                Margin="4,4,4,0"
                Text="nano-search" />

            <!--  Links  -->
            <StackPanel Margin="0,0,4,2" Orientation="Horizontal">
                <ui:HyperlinkButton
                    Content="Site"
                    Cursor="Hand"
                    NavigateUri="https://github.com/Vandal166/nano-search"
                    Padding="4,0,4,0" />
                <TextBlock
                    FontSize="14"
                    Foreground="#66FFFFFF"
                    Margin="0,0"
                    Text=" | " />
                <ui:HyperlinkButton
                    Content="License"
                    Cursor="Hand"
                    NavigateUri="https://github.com/Vandal166/nano-search/blob/main/LICENSE"
                    Padding="4,0,0,0" />
            </StackPanel>

            <Separator BorderBrush="#777" Margin="2,4" />

            <!--  Show in tray  -->
            <CheckBox
                Command="{Binding TrayToggledCommand}"
                Content="Show in tray"
                Foreground="White"
                IsChecked="{Binding ShowInTrayOption.ShowInTray, Mode=TwoWay}"
                Margin="8,0"
                Padding="0" />

            <Separator BorderBrush="#777" Margin="2,4" />

            <!--  Drives  -->
            <TextBlock
                FontSize="12"
                Foreground="White"
                Margin="4,2"
                Text="Disks to index:" />
            <ItemsControl ItemsSource="{Binding AllDrives}" Margin="4,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox
                            Command="{Binding DataContext.DriveCheckedCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            Content="{Binding DriveLetter}"
                            Foreground="White"
                            IsChecked="{Binding Include, Mode=TwoWay}"
                            Margin="0,2" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Separator BorderBrush="#777" Margin="2,4" />

            <TextBlock
                FontSize="12"
                Foreground="White"
                Margin="14,4,0,0"
                Text="{Binding IndexedFileCount.Count, StringFormat='Indexed files: {0}'}" />

            <Separator BorderBrush="#777" Margin="2,4" />
            <!--  Actions  -->
            <Button
                Command="{Binding IndexFilesCommand}"
                Content="Reindex files"
                HorizontalAlignment="Left"
                Margin="14,4"
                Padding="4" />
            <Button
                Command="{Binding OpenFileOptionsCommand}"
                Content="File indexing options"
                HorizontalAlignment="Left"
                Margin="14,4"
                Padding="4" />
            <Button
                Command="{Binding OpenDirOptionsCommand}"
                Content="Directory indexing options"
                HorizontalAlignment="Left"
                Margin="14,4"
                Padding="4" />

            <Separator BorderBrush="#777" Margin="2,4" />

            <!--  Exit  -->
            <Button
                Command="{Binding ExitCommand}"
                Content="Exit"
                HorizontalAlignment="Left"
                Margin="14,4"
                Padding="4" />

        </StackPanel>
    </Border>
</Window>
