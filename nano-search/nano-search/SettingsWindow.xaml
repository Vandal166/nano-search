<!--  SettingsWindow.xaml  -->
<Window
    AllowsTransparency="True"
    Background="Transparent"
    Height="320"
    Padding="0"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Title="nano-search"
    Topmost="True"
    Width="236"
    WindowStyle="None"
    x:Class="NanoSearch.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Entire window is one flat panel  -->
    <Border
        Background="#DD1E1E1E"
        CornerRadius="0"
        Padding="8">

        <StackPanel>

            <!--  Header  -->
            <TextBlock
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="White"
                Margin="4,4,4,8"
                Text="nano-search" />

            <!--  Links  -->
            <StackPanel Margin="4,0,4,8" Orientation="Horizontal">
                <ui:HyperlinkButton Content="Site" NavigateUri="https://github.com/Vandal166/nano-search" />
                <TextBlock
                    Foreground="#66FFFFFF"
                    Margin="4,0"
                    Text=" | " />
                <ui:HyperlinkButton Content="License" NavigateUri="https://github.com/Vandal166/nano-search/blob/main/LICENSE" />
            </StackPanel>

            <Separator Margin="0,4" />

            <!--  Show in tray  -->
            <CheckBox
                Content="Show in tray"
                Foreground="White"
                IsChecked="{Binding ShowInTray, Mode=TwoWay}"
                Margin="4,2" />

            <Separator Margin="0,4" />

            <!--  Drives  -->
            <TextBlock
                FontSize="12"
                Foreground="White"
                Margin="4,2"
                Text="Disks to index:" />
            <ItemsControl ItemsSource="{Binding Drives}" Margin="4,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox
                            Content="{Binding DriveLetter}"
                            Foreground="White"
                            IsChecked="{Binding Include, Mode=TwoWay}"
                            Margin="0,2" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Separator Margin="0,4" />

            <!--  Actions  -->
            <Button
                Click="OnOpenFileOptions"
                Content="File indexing options…"
                Margin="4,2"
                Padding="8,4" />
            <Button
                Click="OnOpenDirOptions"
                Content="Directory indexing options…"
                Margin="4,2"
                Padding="8,4" />

            <Separator Margin="0,4" />

            <!--  Exit  -->
            <Button
                Click="OnExit"
                Content="Exit"
                Margin="4,2"
                Padding="8,4" />

        </StackPanel>
    </Border>
</Window>
